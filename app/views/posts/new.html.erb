<div class="container">
	<div class="blog-main col-sm-12">
		<%= render 'shared/header' %>
    </div>

	<div class="col-sm-12">
		<div class="col-sm-10">
    		<h3 className="blog-main__header">Add New Post</h3>
    	</div>	

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
    <% if @post.errors.any? %>
    <div id="error_explanation">
      <h5 class="pull-left">
        <%= pluralize(@post.errors.count, "error") %> 
        prohibited this post from being saved:
      </h5>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group col-sm-12">
    <h4><%= form.label :title %></h4>
    <div><%= form.text_field :title, :size => "90" %></div>
  </div>
 
  <div class="form-group col-sm-12">
    <h4><%= form.label :body %></h4>
    <div><%= form.text_area :body, :rows => "20", :cols => "100" %></div>
  </div>
 
  <div class="form-group col-sm-12">
    <%= form.submit class: "btn btn-primary" %>
    <div class="btn btn-secondary">
	<%= link_to 'Cancel', posts_path %>
   </div>
  </div>
<% end %>

</div>
</div>