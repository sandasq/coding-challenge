<div class="col-sm-12">
	<%= form_with(model: [ @post, @post.comments.build ]) do |form| %>
   	<div class="form-group col-sm-12">
    	<h4><%= form.label :comment %></h4>
    	<div><%= form.text_area :comment, :rows => "10", :cols => "40" %></div>
  	</div>
 
   <div class="form-group col-sm-12">
    <%= form.submit class: "btn btn-primary" %>
   </div>
<% end %>
</div>