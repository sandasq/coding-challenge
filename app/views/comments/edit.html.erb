<div class="container">
	<div class="blog-main col-sm-12">
		<%= render 'shared/header' %>
		<%= render 'shared/home' %>	
    </div>

	<div class="col-sm-12">	
		<%= form_for [@post, @comment] do |form| %>
     	<div class="form-group col-sm-12">
    		<h3><%= form.label :comment %></h3>
    		<div><%= form.text_area :comment, :rows => "10", :cols => "40" %></div>
  		</div>
	
		<div class="form-group col-sm-12">
    		<%= form.submit class: "btn btn-primary" %>
    		<div class="btn btn-secondary">
				<%= link_to 'Cancel', post_path(@post) %>
   			</div>
  		</div>
   </div>
<% end %>
</div>