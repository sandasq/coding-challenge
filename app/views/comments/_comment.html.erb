<div class="col-sm-12">
  <h5><%= comment.comment %></h5>
</div>

<div class="blog-main__comment-link-header col-sm-6">
	<div class="col-sm-2">
  		<%= link_to 'Edit', edit_post_comment_path(comment.post, comment) %>
	</div>
	<div class="col-sm-2">
  		<%= link_to 'Delete', [comment.post, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
	</div>
</div>